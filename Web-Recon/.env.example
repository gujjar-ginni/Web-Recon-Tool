# ==============================================
# Rapid Recon Configuration - .env.example
# ==============================================
# Copy this file to .env and fill in the values
# ==============================================

# --------------------------
# Flask Application Settings
# --------------------------
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=web.py
FLASK_RUN_PORT=5000

# --------------------------
# Database Configuration
# --------------------------
DATABASE_URL=sqlite:///instance/rapidrecon.db
DATABASE_ECHO=False

# --------------------------
# Email Configuration (for reports)
# --------------------------
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USE_SSL=False
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password  # Use App Password for Gmail
EMAIL_TIMEOUT=30

# --------------------------
# API Keys (Required Services)
# --------------------------
# Get from: https://developer.shodan.io/
SHODAN_API_KEY=U4fB8fSLq33guZk7oczx7ylOrInG7eiJ

# Get from: https://ipinfo.io/
IPINFO_TOKEN=d33133f0c0134f

# --------------------------
# Security Scanning Settings
# --------------------------
# Nmap scan timing (1-5, higher is faster)
NMAP_TIMING=3
# Maximum concurrent module executions
MAX_CONCURRENT_MODULES=3
# Scan timeout in seconds
SCAN_TIMEOUT=300

# --------------------------
# Data Retention Policies
# --------------------------
# Days to keep scan results
DATA_RETENTION_DAYS=30
# Days to keep logs
LOG_RETENTION_DAYS=7

# --------------------------
# Report Configuration
# --------------------------
REPORT_COMPANY_NAME="Your Security Team"
REPORT_LOGO_URL=/static/images/logo.png
REPORT_CONTACT_EMAIL=security@yourcompany.com
REPORT_DISCLAIMER="This report contains sensitive security information. Handle with care."

# --------------------------
# Subdomain Scanner Settings
# --------------------------
SUBDOMAIN_WORDLIST=subdomains-top1mil.txt
SUBDOMAIN_THREADS=20
SUBDOMAIN_TIMEOUT=5

# --------------------------
# Development Flags
# --------------------------
# Enable debug output for modules
DEBUG_MODE=False
# Mock external API calls (for testing)
MOCK_API_CALLS=False